#! /bin/bash
path=`pwd`
crons=`crontab -l`
if [[ -z $crons ]]; then
    touch mycron
else
    echo $crons > mycron
fi
echo "*/2 * * * * ${path}/res/keepAliveScript >&1" >> mycron
crontab mycron
rm mycron
echo "Please edit your config! If you want to use SSL copy your private key and your certificate into the ssl directory in the project root."
