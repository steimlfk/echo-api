#! /bin/bash
path=`pwd`
output="$path/.."
LS=`ls $output/config/*.example`
for file in $LS; do
    name=${file%.example}
    cp $file $name
done
cd "$output/config"
echo "Please configure your config files."
mkdir "$output/ssl"
crons=`crontab -l`
if [[ -z $crons ]]; then
    touch mycron
else
    echo $crons > mycron
fi
echo "*/2 * * * * ${path}/keepAliveScript" >> mycron
crontab mycron
rm mycron
echo "If you want to use SSL copy your private key and your certificate
into the ssl directory in the project root."
