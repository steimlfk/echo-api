#! /bin/bash
# Getting location of script
root="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# Project root
root="$root/.."
js="$(which node)"
if [[ -n $js ]]; then
    node $root/tools/update.js
else
    js="$(which nodejs)"
    if [[ -n $js ]]; then
        nodejs $root/tools/update.js
    else
        echo "Please install node or nodejs, depending on your distribution"
    fi
fi